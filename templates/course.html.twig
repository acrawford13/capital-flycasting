{% extends 'partials/base.html.twig' %}

{% block content %}
	<h1 class="page__heading">Course: {{ page.title }}</h1>
	{{ page.content }}


    <p class="prev-next">
        {% if not page.isFirst %}
            <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> Next Course: {{ page.nextSibling.title }}</a>
        {% endif %}

        {% if not page.isLast %}
            <a class="button" href="{{ page.prevSibling.url }}">Previous Course: {{ page.prevSibling.title }} <i class="fa fa-chevron-right"></i></a>
        {% endif %}
    </p>
{% endblock %}
