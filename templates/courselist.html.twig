{% extends 'partials/base.html.twig' %}

{% block content %}
	<h1 class="page__heading">{{ page.title }}</h1>
	{{ page.content }}
	<div class="course-list">
		{% for p in page.collection %}
		<div class="course-list__item">
			<h2 class="page__subheading">{{ p.title }}</h2>
			<p>{{ p.header.description }}</p>
			<a href="{{ p.url }}">See more</a>
		</div>
    	{% endfor %}
	</div>
{% endblock %}
