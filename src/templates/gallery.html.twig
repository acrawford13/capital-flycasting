{% extends 'partials/base.html.twig' %}

{% block content %}
	<h1 class="page__heading">{{ page.title }}</h1>
	{{ page.content }}
    {% if header.galleryImages %}
    <div class="gallery">
        <div class="gallery__container">
            {% for item in header.galleryImages %}
            <div class="gallery__item" data-index="{{ loop.index }}" data-src="{{ page.media[item.image].fixOrientation.url }}">
                <div class="gallery__photo">
                    <img alt="{{ item.text }}" src="{{ page.media[item.image].fixOrientation.cropZoom(200,200).url }}" class="photo__image" />
                    {% if item.text %}
                        <span style="display: none" class="photo__caption">{{ item.text }}</span>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="gallery__modal modal">
        <div class="modal__inner modal__inner--image">
            <span class="modal__close">&ensp;&times;&ensp;</span>
            <img class="modal__image" />
            <span class="modal__footer caption">
                <span class="modal__caption"></span>
                <span class="modal__imagenum"></span>
            </span>
            <div class="modal__arrows">
                <span class="modal__arrow modal__arrow--prev">&#10094;</span>
                <span class="modal__arrow modal__arrow--next">&#10095;</span>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}
